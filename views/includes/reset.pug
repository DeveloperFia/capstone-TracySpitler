extends ../__layout
block content
  div(class="text-center card container p-4 mt-3")
    != messages('./includes/messages', locals)
    h1 Password Reset
    p click below to get started
    hr
    a(href="" class="btn blue-gradient btn-rounded" data-toggle="modal" data-target="#resetModalForm") Reset Password

    //- Modal - reset password
    div(class="modal fade hidden" id="resetModalForm" tabindex="-1" role="dialog" aria-labelledby="resetModalLabel" aria-hidden="true")
      div(class="modal-dialog" role="document")
        div(class="modal-content form-elegant")
          form(id="resetForm" method='post', action='/auth/reset/' + token)
            div(class="modal-header text-center")
              h3(class="modal-title w-100 dark-grey-text font-weight-bold my-3 ml-4" id="resetModalLabel") #[strong Reset Password]
              button(type="button" class="close" data-dismiss="modal" aria-label="Close") #[span(aria-hidden="true") &times;]        
            div(class="modal-body mx-4")        
              div(class="md-form mb-5")
                input(name="newpassword" type="password" id="resetPassword" class="form-control" required pattern=".{4,}" title="Please enter at least 4 characters")
                label(data-error="wrong" data-success="right" for="resetPassword") New password         
              div(class="md-form mb-5")
                input(name="confirmpassword" type="password" id="confirmPassword" class="form-control" required pattern=".{4,}" title="Please enter at least 4 characters")
                label(data-error="wrong" data-success="right" for="confirmPassword") Confirm password                           
              div(class="text-center mb-3")
                button(type="submit" class="btn blue-gradient btn-block btn-rounded z-depth-1a") Submit         
            
