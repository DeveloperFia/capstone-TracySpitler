.messages
  each type in Object.keys(messages)
    each message in messages[type]
      if type == "error"
        div(class="alert alert-dismissible fade show alert-danger" role="alert") #{message} 
          button(type="button" class="close" data-dismiss="alert" aria-label="Close") #[span(aria-hidden="true") &times;]
      else 
        div(class="alert alert-dismissible fade show alert-" + type role="alert") #{message} 
          button(type="button" class="close" data-dismiss="alert" aria-label="Close") #[span(aria-hidden="true") &times;]
